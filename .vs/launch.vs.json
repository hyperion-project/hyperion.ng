{
  "version": "0.2.1",
  "defaults": {},
  "configurations": [
    {
      "type": "default",
      "project": "CMakeLists.txt",
      "projectTarget": "hyperiond.exe (bin\\hyperiond.exe)",
      "name": "Run Hyperion"
    },
    {
      "type": "default",
      "project": "CMakeLists.txt",
      "projectTarget": "hyperiond.exe (bin\\hyperiond.exe)",
      "name": "Run hyperion with debug logging",
      "args": [
        "-d"
      ],
      "env": {
        "QT_LOGGING_CONF": "${workspaceRoot}/qtlogging.ini"
      },
      "externalConsole": false
    },
    {
      "type": "default",
      "project": "CMakeLists.txt",
      "projectTarget": "hyperiond.exe (bin\\hyperiond.exe)",
      "name": "Run hyperion with verbose logging",
      "args": [
        "-v"
      ],
      "externalConsole": false
    },
    {
      "type": "default",
      "project": "CMakeLists.txt",
      "projectTarget": "hyperiond.exe (bin\\hyperiond.exe)",
      "name": "Run hyperion with debug logging and a test configuration DB",
      "args": [
        "-d",
        "-u ${workspaceRoot}\\configs\\testConfig"
      ],
      "env": {
        "QT_LOGGING_CONF": "${workspaceRoot}/qtlogging.ini"
      },
      "externalConsole": false
    },
    {
      "type": "default",
      "project": "CMakeLists.txt",
      "projectTarget": "hyperiond.exe (bin\\hyperiond.exe)",
      "name": "test configuration DB - Dominant",
      "args": [
        "-d",
        "-u ${workspaceRoot}\\build\\dominat"
      ],
      "externalConsole": false
    }
  ]
}
