{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Linux) hyperiond",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/hyperiond",
      "args": ["-d"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "(Windows) hyperiond",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetDirectory}/hyperiond",
      "args": ["-d"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "internalConsole"
    },
    {
      "name": "(macOS) Hyperion.app",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/hyperiond.app/Contents/MacOS/hyperiond",
      "args": ["-d"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "internalConsole",
      "MIMode": "lldb"
    }
  ]
}
